@model IEnumerable<SnapBridge.Models.Inventory>

@{
    ViewBag.Title = "SnapBridge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Of Inventories</h2>
<hr/>
<p>
    @Html.ActionLink("Add Item to Inventory", "Create")
</p>
<table class="table">
    @if (Model.Any()) { 
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    }

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(Convert.ToString(item.Name), "Details", new { id = item.Id }) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Remove", "Delete", new { id=item.Id },
                new { onclick = "return confirm('Are sure wants to delete?');" })
        </td>
    </tr>
}

</table>
